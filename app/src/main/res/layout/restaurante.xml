<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingTop="16dp">

    <!-- Nombre del restaurante -->
    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="14sp" />

    <!-- Imagen del restaurante -->
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop" />

    <!-- Dirección web -->
    <TextView
        android:id="@+id/direccionweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textColor="#0066cc"
        android:textSize="14sp" />

    <!-- Teléfono -->
    <TextView
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="14sp" />

    <!-- RadioButton: favorito -->
    <RadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="8dp"
        android:text="Favorito" />

    <!-- RatingBar: puntuación del restaurante -->
    <RatingBar
        android:id="@+id/barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:numStars="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/btnMenuContextual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Menú Opciones" />

    <!-- EditText para la fecha de última visita -->
    <TextView
        android:id="@+id/edit_fecha_ultima_visita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de última visita"
        android:textSize="14sp" />
</LinearLayout>
